<%= form_for @topic , html: {class: "custom"} do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="large-6 columns">
      <div class="row collapse">
        <div class="large-12 small-12 columns">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="large-12 small-12 columns">
          <%= f.label :subject_id %><br>
          <%= f.select :subject_id, options_for_select(Subject.all.map{|s|[s.name, s.id]}) %>
        </div>
      </div>
    </div>

    <div class="large-6 columns tall-box">
      <div>
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>
    </div>

  </div>
  <div class="row">
    <div class="actions">
      <%= f.submit class: 'button large-12' %>
    </div>
  </div>
<% end %>
