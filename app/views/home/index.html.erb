<style>
body {
  background: url("http://res.cloudinary.com/codaisseur/image/upload/v1460715081/1_vfybth.jpg") no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  width:100%;
  height: 100%;
}

.stutor {
 position:relative;
 color: white;
 margin-top: 175px;
 font-family: 'Brandon Grotesque';
 font-size: 70px;


}

.search-complete {
  position:relative;
  width: 700px;

}



</style>
<html>
<center>
<h1 class='stutor'> FIND YOUR STUTOR </h1>
<div class = 'search-complete'>
<div class = "search-subject" style="display:initial">
   <%= form_tag(subjects_path, :method => "get", id: "search-form") do %>
    <%= search_field_tag :search, params[:search], placeholder: "Search on subject" %>
   <%= submit_tag "Search", style: "display:none" %>
  <% end %>
</div>
<div class = "search-topic" style="display:none">
   <%= form_tag(topics_path, :method => "get", id: "search-form") do %>
    <%= search_field_tag :search, params[:search], placeholder: "Search on topic" %>
   <%= submit_tag "Search", style: "display: none" %>
  <% end %>
</div>
<div class = "search-stutor" style="display:none">
   <%= form_tag(subjects_path, :method => "get", id: "search-form") do %>
    <%= search_field_tag :search, params[:search], placeholder: "Search on subject" %>
   <%= submit_tag "Search", style: "display:none"%>
  <% end %>
</div>

  <div class="search-options">

    <label>
      <input type="radio" name="subject" class="radio-subject" checked="checked" /><br />
        Subject
    </label>

    <label>
      <input type="radio" name="topic" class="radio-topic" /><br />
        Topic
    </label>

    <!-- <label>
      <input type="radio" name="stutor" class="radio-stutor" /><br />
        Stutor
    </label> -->

  </div>
</div>
</center>
</body>
</html>
